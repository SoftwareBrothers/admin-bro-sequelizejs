{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2018"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "outDir": "./out"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}